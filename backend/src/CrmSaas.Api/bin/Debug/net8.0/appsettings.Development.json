{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=192.168.1.127;Database=CrmSaas_Master_Dev;User Id=crmuser;Password=CRMuser@123#;MultipleActiveResultSets=true;TrustServerCertificate=True;Encrypt=False",
    "TenantTemplate": "Server=192.168.1.127;Database=CrmSaas_{TenantId};User Id=crmuser;Password=CRMuser@123#;MultipleActiveResultSets=true;TrustServerCertificate=True;Encrypt=False"
  },
  "JwtSettings": {
    "Secret": "YourSuperSecretKeyForJwtTokenGenerationMustBeAtLeast256Bits!@#$%",
    "Issuer": "CrmSaas.Api",
    "Audience": "CrmSaas.Client",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "TenantSettings": {
    "DefaultTenantId": "default",
    "ResolutionStrategy": "Header",
    "HeaderName": "X-Tenant-Id",
    "AllowSubdomainResolution": true,
    "IsolationStrategy": "SharedDatabase"
  },
  "CorsSettings": {
    "AllowedOrigins": [ "http://localhost:3000", "http://localhost:5173", "https://localhost:3000", "https://localhost:5173" ],
    "AllowedMethods": [ "GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS" ],
    "AllowedHeaders": [ "*" ],
    "AllowCredentials": true
  },
  "RateLimitSettings": {
    "EnableRateLimiting": true,
    "PermitLimit": 100,
    "WindowInSeconds": 60,
    "QueueLimit": 2
  },
  "EmailSettings": {
    "Enabled": false,
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": 587,
    "SmtpUsername": "your-email@gmail.com",
    "SmtpPassword": "your-app-password",
    "EnableSsl": true,
    "FromEmail": "noreply@crmsaas.com",
    "FromName": "CRM SaaS"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/crmsaas-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  }
}
